<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.enzoboully.projetreconnaissance.Photo">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <TextView
            android:text="Reconnaissance Faciale"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/Titre"
            android:fontFamily="cursive"
            android:typeface="serif"
            android:textColor="#DAA520"
            android:textStyle="normal|italic"
            android:textAlignment="center"
            android:textSize="36sp"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <TextView
            android:text="Patientez..."
            android:background="@drawable/resultface"
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:id="@+id/personne"
            android:layout_marginTop="325dp"
            android:fontFamily="cursive"
            android:typeface="serif"
            android:textColor="#DAA520"
            android:textStyle="normal|italic"
            android:gravity="right"
            android:textSize="28sp"
            android:layout_centerHorizontal="true"
            android:paddingTop="150dp"
            android:paddingRight="50dp"
            android:visibility="invisible"/>

        <Button
            android:text="Revenir Ã  l'accueil"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="700dp"
            android:id="@+id/button"
            android:visibility="invisible"/>

        <SurfaceView android:id="@+id/surfaceViewCamera" android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_weight="1.19"
            android:visibility="visible"></SurfaceView>

    </FrameLayout>

</RelativeLayout>